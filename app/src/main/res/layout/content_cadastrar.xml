<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".cadastrar"
    tools:showIn="@layout/activity_cadastrar">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Cadastrar Artigo"
        android:textColor="#FFFFFF
"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:hint="Título"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="33dp"
        android:text="Categoria"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="168dp"
        android:layout_height="163dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="164dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <RadioButton
            android:id="@+id/estagio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estágio"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/projetoExtensao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projeto de Extensão"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/intervaloCultural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intervalo Cultural"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/bolsas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bolsas"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/palestra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palestras"
            android:textColor="#FFFFFF"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Tipo do Artigo"
        android:textColor="#FFFFFF
"
        app:layout_constraintBottom_toBottomOf="@+id/publico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/publico" />

    <TextView
        android:id="@+id/publico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="160dp"
        android:text="Publico"
        android:textColor="#FFFFFF
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup3" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4">

        <RadioButton
            android:id="@+id/evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evento"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notícia"
            android:textColor="#FFFFFF"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/publico">

        <RadioButton
            android:id="@+id/interno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interno"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/externo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Externo"
            android:textColor="#FFFFFF"/>
    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:text="@string/title_activity_cadastrar"
        android:textColor="#FFFFFF"
        android:background="#212121"
        android:onClick="cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup3"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2" />
</androidx.constraintlayout.widget.ConstraintLayout>